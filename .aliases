#!/usr/bin/env bash

# Shortcuts
alias d="cd ~/Downloads"
alias content="cd ~/Projects/wp-devenv/wp/wp-content/"
alias dt="cd ~/Desktop"
alias p="cd ~/Projects"
alias blog="cd ~/Projects/blog-site/posts/"

# Always enable colored `grep` output
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# Enable aliases to be sudoâ€™ed
alias sudo='sudo '

# update nvim packages
alias nvim_update="nvim -c 'autocmd User PackerComplete quitall' -c 'PackerSync'"

# Get macOS Software Updates, and update installed Ruby gems, Homebrew, npm, and their installed packages
alias update='sudo softwareupdate -i -a; brew update; brew upgrade; brew cleanup; mas upgrade; npm install npm -g; npm update -g; nvim_update'

# URL-encode strings
alias urlencode='python -c "import sys, urllib as ul; print ul.quote_plus(sys.argv[1]);"'

# Merge PDF files
# Usage: `mergepdf -o output.pdf input{1,2,3}.pdf`
alias mergepdf='/System/Library/Automator/Combine\ PDF\ Pages.action/Contents/Resources/join.py'

# Vim with italic support
#alias vim="TERM=xterm-256color-italic vim"

# Don't know, but tmux is hard to type for me
alias tm="tmux attach || tmux new"

# If you are using Kitty.app then you can preview images on the terminal:
alias icat="kitty +kitten icat"

# The lsd command is "almost" a drop-in replacement of `ls` but with icon's
alias ls="lsd"
